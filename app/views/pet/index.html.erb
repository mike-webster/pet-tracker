<h1 class="mt-5">Pet Information</h1>
  <div class="row">
    <% unless @pets.present? %>
      <p>No pets yet</p>
    <% else %>
      <% @pets.each do |p| %>
        <div class="col-md-4">
          <h4><%= p.name %></h4>
          <p>
            <%= p.kind %><br>
            <%= p.breed %><br>
            Birthday: <%= p.birthday %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
<a href="<%= new_pet_path %>">Add new pet</a>