<style>
  .content {
    min-width: 400px;
    max-width: 1400px;
    padding: 20px 10px;
    background-color: gray;
    border-style: solid;
    border-size: 5px;
  }

  .row {
    padding: 10px 5px;
  }

  .errors {
    background-color: pink;
    color: white;
    border-style: solid;
    border-size: 5px;
    border-color: red;
  }
</style>
<div class="content">
  <h2>New Pet</h2>
  <p>Errors<%= @pet.errors.map { |m| m} %></p>
  <% if @pet.present? && @pet.errors.messages.any? %>
    <div class="errors">
      <ul>
        <% @pet.errors.messages.each do |msg| %>
          <li><b><%= msg[0] %></b>: <%= msg[1] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with(model: @pet, local: true, url: "/pet", method: "post") do |form| %>
    <div class="row">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>
    <div class="row">
      <%= form.label :kind %>
      <%= form.text_field :kind %>
    </div>
    <div class="row">
      <%= form.label :breed %>
      <%= form.text_field :breed %>
    </div>
    <div class="row">
      <%= form.date_field :birthday %>
      <%= form.submit %>  
    </div>
  <% end %> 
