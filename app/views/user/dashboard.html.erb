<div class="container">
  <%# header 1 %>
  <div class="row text-center">
    <div class="col-12">
      <h2><%= @current_user.first_name.titleize %>'s Dashboard</h2>
    </div>
  </div>

  <%# header 2 %>
  <div class="row text-center">
    <div class="col-3 offset-4 col-lg-2 offset-lg-5 mt-5 mb-5">
      <%= select_tag "pets", options_for_select(@pets.map{|p|[p.name, p.id]} << ["Select", -1], -1) %>
    </div>
  </div>

  <%# Body %>
  <div class="row">
    <div class="event_form col-6 text-center" style="display: none">
      <div class=" p-2 mt-5 mb-5 border">
        <div class="row text-center">
          <h4 class="col-12">Add New Event</h4>
          <hr class="col-12" />
        </div>
        <%= render "event/form", event: Event.new %>
      </div>
      <div class="row charts mb-5">
        <ul class="nav nav-tabs col-12" id="chartTabs">
          <li class="nav-item">
            <a class="nav-link active" id="potties-tab" href="#potties-body">Potties</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="poos-tab" href="#poos-body">Poos</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="pees-tab" href="#pees-body">Pees</a>
          </li>
        </ul>
        <div class="tab-content col-12" id="myTabContent">
          <div class="custom-panel" id="potties-body">
            <div class="col-12">
              <%= line_chart @data %>
            </div>
          </div>
          <div class="custom-panel" id="poos-body" style="display:none;">
            <div class="col-12">
              <%= line_chart @poopdata %>
            </div>
          </div>
          <div class="custom-panel" id="pees-body" style="display:none;">
            <div class="col-12">
              <%= line_chart @peedata %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="pet-info" class="col-6" style="display: none;">
    </div>
  </div>
</div>