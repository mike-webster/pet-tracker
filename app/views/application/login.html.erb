<div class="content">
  <h2>login</h2>
  <div>
    <% flash.each do |type, msg| %>
      <div class="errors">
        <%= msg %>
      </div>
    <% end %>
  </div>
  <div class="container text-left">
    <%= form_for @user, url: "/login", method: "post" do |form| %>
      <div class="row">
        <div class="col-6">
          <%= form.label :email %>
        </div>
        <div class="col-6">
          <%= form.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= form.label :password %>
        </div>
        <div class="col-6">
          <%= form.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a class="btn" href="javascript:void(0);" onclick="$('input:submit').click();">Login</a>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a href="<%= new_user_path %>">Create Account</a>
        </div>
      </div>
    <% end %>
  </div>
</div>