<div class="content">
  <h2>login</h2>
  <div>
    <% flash.each do |type, msg| %>
      <div class="errors">
        <%= msg %>
      </div>
    <% end %>
  </div>
  <div class="container text-center">
    <%= form_for @user, url: "/login", method: "post" do |form| %>
      <div class="row">
        <div class="col-6 text-right">
          <%= form.label :email %>
        </div>
        <div class="col-6 text-left">
          <%= form.text_field :email %>
        </div>
      </div>
      <div class="row">
        <div class="col-6 text-right">
          <%= form.label :password %>
        </div>
        <div class="col-6 text-left">
          <%= form.password_field :password %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a class="btn my-3" href="javascript:$('form').submit();" onclick="">Login</a>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <a class="btn-secondary my-3" href="<%= new_user_path %>">Create Account</a>
        </div>
      </div>
    <% end %>
  </div>
</div>