<div class="content">
  <h2>New Event</h2>

  <%= render 'flash_errors', model: @event %>

  <div class="container">
    <div class="row">
      <%= bootstrap_form_tag do |form| %>
        <%= form.select :pet, options_for_select([["Select pet", nil]].concat(@pets.map{|p| [p.name, p.id]})), { }, { class: "pet-select"} %>
      <% end %>
    </div>
  </div>
  <%= render 'form', event: @event %>

  <hr>

  <h4>Events</h4>
  <% @events.each do |e| %>
    <%= render 'list_item', event: e %>
  <% end %>
